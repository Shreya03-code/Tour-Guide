<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atm.RowAtmActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/back_atm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#82B9E4"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:gravity="center_vertical"
        android:scaleType="fitEnd"
        android:text="Atm"
        android:textColor="@color/black"
        android:textSize="25sp">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details For Atms"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/berkshire_swash"
        android:textColor="#768886"
        android:layout_marginTop="15dp">
    </TextView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/atm">

    </ImageView>

    <Button
        android:id="@+id/but_axis"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="30dp"
        android:gravity="center"
        android:scaleType="fitEnd"
        android:text="AXIS Details"
        android:textColor="#0B1651"
        android:textSize="20dp">
    </Button>

    <Button
        android:id="@+id/but_sbi"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="30dp"
        android:gravity="center"
        android:scaleType="fitEnd"
        android:text="SBI Details"
        android:layout_marginTop="10dp"
        android:textColor="#0B1651"
        android:textSize="20dp">
    </Button>

    <Button
        android:id="@+id/but_hdfc"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="30dp"
        android:gravity="center"
        android:scaleType="fitEnd"
        android:text="HDFC Details"
        android:layout_marginTop="10dp"
        android:textColor="#0B1651"
        android:textSize="20dp">
    </Button>

    <Button
        android:id="@+id/but_pnb"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="30dp"
        android:gravity="center"
        android:scaleType="fitEnd"
        android:layout_marginTop="10dp"
        android:text="PNB Details"
        android:textColor="#0B1651"
        android:textSize="20dp">
    </Button>

    <Button
        android:id="@+id/but_yes"
        android:layout_width="376dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="30dp"
        android:gravity="center"
        android:scaleType="fitEnd"
        android:text="YES Details"
        android:layout_marginTop="10dp"
        android:textColor="#0B1651"
        android:textSize="20dp">
    </Button>



</LinearLayout>