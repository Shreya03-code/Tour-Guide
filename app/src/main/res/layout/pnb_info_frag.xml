<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1E0F8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/atm6"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/fontfamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra"
        android:text="PNB"
        android:textColor="#9E4D47"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Top PNB Debit Cards include PNB Platinum Debit Card, Rupay Select Debit Card, etc. These cards are tailor-made to provide the convenience of cashless transactions, higher cash withdrawals at ATMs, and POS purchases at merchant outlets.You can withdraw up to Php 50,000.00 per day. Transaction Limits: Minimum amount: Php 100.00 per transaction. Maximum amount: Php 40,000.00 per transaction."
        android:textColor="@color/black"
        android:textSize="20dp" />




</LinearLayout>