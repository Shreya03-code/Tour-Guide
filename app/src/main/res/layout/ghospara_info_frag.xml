<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DED5EF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ghosparainfo"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/fontfamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra"
        android:text="Kalyani Ghospara"
        android:textColor="#9E4D47"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Kalyani Ghoshpara railway station is a Kolkata Suburban Railway station on the Kalyani Simanta Branch line of Sealdah railway division. It is situated at Shilpanchal Road, Kalyani in Nadia district in the Indian state of West Bengal. It serves Ghoshpara, Kalyani University, ITI College and B Block area of the city."
        android:textColor="@color/black"
        android:textSize="25dp" />




</LinearLayout>