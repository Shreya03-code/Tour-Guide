<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E0DF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/picnicinfo"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/fontfamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra"
        android:text=" Picnic Gurden"
        android:textColor="#9E4D47"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="As the name suggests, it holds an endearing place in Kalyani landscape as a beautiful scenic place to organize picnics especially in the winter. It is placed along the western end of Congress road which comes along the Kalyani main station. Kalyani Picnic Garden offers a wealth of natural beauty and recreational opportunities. Its landscapes can bring a sense of calm and wonder."
        android:textColor="@color/black"
        android:textSize="25dp" />




</LinearLayout>