<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1E0F8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/snr_info"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/fontfamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra"
        android:text="SNR CARNIVAL HOSPITAL"
        android:textColor="#9E4D47"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S.N.R. Carnival Hospital is the focus of unique medical philosophy and treatment created and guided by Dr. Sudhir Kumar Ray with the highest level of professional and academic training in India and abroad. The hospital is committed to consistently providing high-quality medical care, bringing modern technology to the widest possible segment of society. Since its opening in 1983, Carnival Hospital has gradually evolved into a multi-specialty hospital with an emphasis on value-for- no money service."
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stars: "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>



</LinearLayout>